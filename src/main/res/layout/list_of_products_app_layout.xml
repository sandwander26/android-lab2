<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/productsRecyclerView"
        android:layout_width="409dp"
        android:layout_height="500dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp" />

    <EditText
        android:id="@+id/productEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="532dp"
        android:width="240dp"
        android:height="48dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/productEditTextHint"
        android:inputType="text"
        android:fontFamily="@font/roboto_black_italic"
        android:minHeight="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="LabelFor,MissingConstraints" />

    <Button
        android:id="@+id/saveProductButton"
        android:layout_width="110dp"
        android:layout_height="48dp"
        android:layout_marginStart="270dp"
        android:layout_marginTop="532dp"
        android:background="@color/black"
        android:fontFamily="@font/roboto_black_italic"
        android:onClick="saveProduct"
        android:text="@string/save"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,DuplicateSpeakableTextCheck" />

    <Button
        android:id="@+id/clearAllProductsButton"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="605dp"
        android:onClick="clearAllProducts"
        android:text="@string/clear"
        android:textSize="20sp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_black_italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>